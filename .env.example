# Daily Briefings - Environment Variables
# Copy this file to .env and fill in your actual values

# App Configuration
APP_NAME=Daily Briefings
APP_VERSION=0.1.0
DEBUG=False

# API Settings
API_HOST=0.0.0.0
API_PORT=8000

# LLM Provider Configuration
# Options: openai, anthropic
LLM_PROVIDER=openai
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.7

# API Keys
# Uncomment and fill in based on your chosen LLM provider
OPENAI_API_KEY=your_openai_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Calendar Integration
# Add credentials for your calendar service (Google Calendar, Outlook, etc.)
# CALENDAR_API_KEY=your_calendar_api_key_here
# GOOGLE_CALENDAR_CREDENTIALS=path/to/credentials.json
# OUTLOOK_CLIENT_ID=your_outlook_client_id
# OUTLOOK_CLIENT_SECRET=your_outlook_client_secret

# Database Configuration (Optional)
# Uncomment if using persistent storage
# DATABASE_URL=postgresql://user:password@localhost:5432/daily_briefings
# Or for MongoDB:
# DATABASE_URL=mongodb://localhost:27017/daily_briefings

# User Memory Settings
MEMORY_MAX_TOKENS=2000
MEMORY_TTL_HOURS=24

# Logging
LOG_LEVEL=INFO

# CORS Settings (for production)
# ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
